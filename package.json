{
  "name": "@dreamstack-us/section-flow",
  "version": "0.0.4",
  "type": "module",
  "workspaces": [
    ".",
    "packages/*"
  ],
  "description": "High-performance, section-first list library for React Native",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "@dreamstack-us/source": "./src/index.ts",
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "@dreamstack-us/source": "./src/index.ts",
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsdown && bun run --filter './packages/*' build",
    "build:root": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "version": "changeset version",
    "release": "changeset publish",
    "prepublishOnly": "bun run build:root"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.76.0"
  },
  "peerDependenciesMeta": {
    "react-native-reanimated": {
      "optional": true
    },
    "react-native-gesture-handler": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.0",
    "@types/react": "^19.0.0",
    "react": "^19.0.0",
    "react-native": "^0.76.0",
    "tsdown": "^0.6.0",
    "typescript": "^5.7.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DreamStack-us/SectionFlow.git"
  },
  "author": "DreamStack <hello@dreamstack.us>",
  "license": "MIT",
  "keywords": [
    "react-native",
    "list",
    "sectionlist",
    "performance",
    "cell-recycling",
    "virtualization",
    "flashlist",
    "new-architecture"
  ]
}

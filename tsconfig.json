{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedDeclarations": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["react-native"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "__tests__", "example"]
}
